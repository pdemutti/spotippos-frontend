<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{title}}</title>
  <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
  <link rel="stylesheet" as="style" href="/css/main.css" />
</head>
<body>
  <article>
    <header class="top">
      <h1>{{title}}</h1>
      <div class="spotilogo">
        <i class="icon icon-logo-vivareal"></i>
      </div>
    </header>
  </article>

  <div class="grid">
    <div class="grid-cell main">
      <div id="result-list">
        {{{ body }}}
        {{{paginate foundProperties atualPage=atualPage}}}
      </div>
    </div>
    <div class="grid-cell aside aside-1">
      <nav class="tools">
        <ul>
          <li>
          <button class="icon icon-building">
            Anúncios
          </button>
          </li>
          <li>
            <button class="icon icon-plus-icon">
              Novos Anúncios
            </button>
          </li>
        </ul>
      </nav>
    </div>
    <div class="grid-cell aside aside-2">
      <div id="filter-container">
        <form id="formFilter" method="get">
          <fieldset>
            <legend>Filtro</legend>
            <ul>
              <li>
                {{{input_label 'AX' id='ax_lb'}}}
                {{{input_number ax id='ax'}}}
              </li>
              <li>
                {{{input_label 'ay' id='ay_lb'}}}
                {{{input_number ay id='ay'}}}
              </li>
              <li>
                {{{input_label 'bx' id='bx_lb'}}}
                {{{input_number bx id='bx'}}}
              </li>
              <li>
                {{{input_label 'by' id='by_lb'}}}
                {{{input_number by id='by'}}}
              </li>
              <li>
                {{{input_label 'id' id='id_lb'}}}
                {{{input_number id id='id'}}}
              </li>
              <li>
                {{{input_label 'Area' id='squareMeters_lb'}}}
                {{{input_number squareMeters id='squareMeters'}}}
              </li>
              <li>
                {{{input_label 'Camas' id='beds_lb'}}}
                {{{input_number beds id='beds'}}}
              </li>
              <li>
                {{{input_label 'Banheiros' id='baths_lb'}}}
                {{{input_number baths id='baths'}}}
              </li>
              <li>
                {{{input_label 'Preço minimo' id='minprice_lb'}}}
                {{{input_number minprice id='minprice'}}}
              </li>
              <li>
                {{{input_label 'Preço Maximo' id='maxprice_lb'}}}
                {{{input_number ax id='maxprice'}}}
              </li>
            </ul>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.8/handlebars.js" charset="utf-8"></script>
  <script src="/js/dist/bundle.js" charset="utf-8"></script>
</body>
</html>
